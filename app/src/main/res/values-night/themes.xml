<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MADSCalculator" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/app_black</item>
        <item name="colorPrimaryVariant">@color/app_black</item>
        <item name="colorOnPrimary">@color/app_white</item>
        <item name="colorSecondary">@color/app_black</item>
        <item name="colorSecondaryVariant">@color/app_black</item>
        <item name="colorOnSecondary">@color/app_white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.MADSCalculatorSplashScreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>